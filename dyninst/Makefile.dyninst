BOOST_INCLUDE=-I$(BOOST_ROOT)/include 
BOOST_LIBS= \
	-L$(BOOST_ROOT)/lib -Wl,-rpath,$(BOOST_ROOT)/lib \
        -lboost_system \
        -lboost_filesystem \
        -lboost_thread \
        -lboost_date_time \
        -lboost_timer \
        -lboost_chrono \
        -lboost_system \
        -lboost_thread 

DYNINST_INCLUDE=-I$(DYNINST_ROOT)/include 
DYNINST_LIBS= \
	-L$(DYNINST_ROOT)/lib -Wl,-rpath,$(DYNINST_ROOT)/lib \
	-lsymtabAPI \
	-lparseAPI \
	-linstructionAPI 

TCMALLOC_ROOT=${GPERFTOOLS}
TCMALLOC_LIBS=  -L$(TCMALLOC_ROOT)/lib -Wl,-rpath,$(TCMALLOC_ROOT)/lib \
	-ltcmalloc

INCLUDES= \
	$(BOOST_INCLUDE) \
	$(DYNINST_INCLUDE)

LIBS= \
	$(DYNINST_LIBS) \
	$(BOOST_LIBS) \
	$(TCMALLOC_LIBS)

$(TARGET): $(TARGET).cpp
	g++ -g $(PMODEL_OPT) -std=c++11 $(INCLUDES) -o $@ $< $(LIBS)
